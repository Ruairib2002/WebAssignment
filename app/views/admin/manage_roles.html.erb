<h1>Manage User Roles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Current Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.role&.role_name || "No Role Assigned" %></td>
      <td>
        <%= form_with model: user, url: admin_update_role_path(user), method: :patch, local: true do |f| %>
        <%= f.submit "Update User", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>