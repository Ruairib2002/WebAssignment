<h1>Edit Group</h1>

<%= form_with model: @group, url: update_admin_group_path(@group), method: :patch, local: true do |form| %>
<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :members %>
  <%= form.collection_check_boxes :user_ids, User.all, :id, :full_name do |b| %>
  <div class="checkbox">
    <%= b.check_box %>
    <%= b.text %>
  </div>
  <% end %>
</div>

<%= form.submit "Update Group", class: "btn btn-success" %>
<% end %>